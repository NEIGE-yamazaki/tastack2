{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Laravel Sail Up",
            "type": "shell",
            "command": "./vendor/bin/sail up -d",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Laravel Sail Down",
            "type": "shell",
            "command": "./vendor/bin/sail down",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Vite Dev Server",
            "type": "shell",
            "command": "npm run dev",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^\\s*Local:",
                    "endsPattern": "ready in \\d+ms"
                }
            }
        },
        {
            "label": "Build for Mobile",
            "type": "shell",
            "command": "npm run build:mobile",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Capacitor Sync",
            "type": "shell",
            "command": "npx cap sync",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Open iOS in Xcode",
            "type": "shell",
            "command": "npx cap open ios",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "CAPACITOR_PLATFORM": "ios"
                }
            }
        },
        {
            "label": "Open Android in Android Studio",
            "type": "shell",
            "command": "npx cap open android",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "CAPACITOR_ANDROID_STUDIO_PATH": "/snap/bin/android-studio"
                }
            }
        },
        {
            "label": "Windows Pre-Push Check",
            "type": "shell",
            "command": "npm run sync:windows",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$tsc",
                "$eslint-stylish"
            ]
        },
        {
            "label": "Build Android APK (Debug)",
            "type": "shell",
            "command": "npm run build:android",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "JAVA_HOME": "${env:JAVA_HOME}"
                }
            }
        },
        {
            "label": "Build Android APK (Release)",
            "type": "shell",
            "command": "npm run build:android:release",
            "group": "build",
            "presentation": {
                "echo": true,
